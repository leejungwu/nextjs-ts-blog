{
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "import",
      "react"
    ],
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
        "prettier/prettier": ["error", { "singleQuote": true }],
        "react/jsx-uses-vars": "error"
    },
    "ignorePatterns": ["*.config.js"]
  }